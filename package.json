{
  "name": "multi-kill-clipper",
  "version": "1.0.0",
  "description": "A desktop application built for League of Legends players that allows you to easily create clips of multi-kills earned by you or any other player within your region.",
  "main": "./src/main.cjs",
  "type": "module",
  "scripts": {
    "start": "electron-forge start",
    "rebuild": "npm rebuild --runtime=electron --target=17.0.1 --disturl=https://atom.io/download/atom-shell --abi=102",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "lint": "eslint . --fix"
  },
  "author": "Austin Pinto",
  "license": "ISC",
  "dependencies": {
    "bottleneck": "^2.19.5",
    "dotenv": "^16.3.1",
    "electron-reload": "^1.5.0",
    "electron-squirrel-startup": "^1.0.0",
    "find-process": "^1.4.4",
    "league-connect": "*",
    "node-fetch": "^2.6.1",
    "node-window-manager": "^2.2.4",
    "robotjs": "^0.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "babel-loader": "^9.1.3",
    "babel-plugin-module-resolver": "^5.0.0",
    "electron": "17.0.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.53.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-babel-module": "^5.3.2",
    "eslint-plugin-import": "^2.29.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "multi-kill-clipper"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
